<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mrleo.coachproect">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:name=".MainApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="Coach Project"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar" >
        <activity android:name=".EnterProgram">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StudentInterface"
            android:label="@string/title_activity_student_interface"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".CoachInterface"
            android:label="@string/title_activity_student_interface"
            android:theme="@style/AppTheme.NoActionBar"/>

        <receiver
            android:name="com.example.mrleo.coachproect.Alarm"
            android:enabled="true"
            android:exported="true">
        </receiver>
    </application>
</manifest>